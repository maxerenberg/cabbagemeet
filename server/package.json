{
  "name": "cabbagemeet-server",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "license": "AGPLv3",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "smtp": "scripts/mockSmtpServer.js",
    "start": "NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "DOTENV_PATH=test/.test-sqlite.env jest --config ./test/jest-e2e.json",
    "test:e2e:mariadb": "DOTENV_PATH=test/.test-mariadb.env jest --config ./test/jest-e2e.json",
    "test:e2e:postgres": "DOTENV_PATH=test/.test-postgres.env jest --config ./test/jest-e2e.json",
    "test:e2e:debug": "DOTENV_PATH=test/.test-sqlite.env node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
    "migration:generate:sqlite": "DATABASE_TYPE=sqlite typeorm-ts-node-esm migration:generate -d datasource.ts --outputJs ./migrations/sqlite/Migration",
    "migration:run:sqlite": "DATABASE_TYPE=sqlite typeorm-ts-node-esm migration:run -d datasource.ts",
    "migration:generate:mariadb": "DATABASE_TYPE=mariadb typeorm-ts-node-esm migration:generate -d datasource.ts --outputJs ./migrations/mariadb/Migration",
    "migration:run:mariadb": "DATABASE_TYPE=mariadb typeorm-ts-node-esm migration:run -d datasource.ts",
    "migration:generate:postgres": "DATABASE_TYPE=postgres typeorm-ts-node-esm migration:generate -d datasource.ts --outputJs ./migrations/postgres/Migration",
    "migration:run:postgres": "DATABASE_TYPE=postgres typeorm-ts-node-esm migration:run -d datasource.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^8.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": ">=0.14.0",
    "dotenv": "^16.1.4",
    "helmet": "^6.0.1",
    "luxon": "^3.2.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.2.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.10.0",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "short-unique-id": "^4.4.4",
    "typeorm": "^0.3.16",
    "undici": "^5.19.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.2.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-jwt": "^3.0.7",
    "@types/passport-strategy": "^0.2.35",
    "@types/pg": "^8.6.5",
    "@types/smtp-server": "^3.5.7",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.3.2",
    "smtp-server": "^3.11.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
